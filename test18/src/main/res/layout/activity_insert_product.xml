<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lunamall.example.test18.InsertProduct">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="물품 등록"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="카테고리"/>
        <TextView
            android:id="@+id/category"
            android:padding="5dp"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="카테고리 선택하기"
            android:background="@drawable/actions"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="제품명"/>
            <EditText
                android:id="@+id/name"
                android:padding="5dp"
                android:background="@drawable/actions"
                android:layout_width="190dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="가격"/>
            <EditText
                android:id="@+id/price"
                android:padding="5dp"
                android:background="@drawable/actions"
                android:layout_width="190dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="참고 링크"/>
            <EditText
                android:id="@+id/description"
                android:padding="5dp"
                android:background="@drawable/actions"
                android:layout_width="190dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="이미지"/>
            <TextView
                android:id="@+id/image"
                android:padding="5dp"
                android:background="@drawable/actions"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/findimage"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/insertProduct"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/inproductbtn"/>

    <ImageView
        android:id="@+id/bottommenu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="125dp"
        android:layout_gravity="bottom"
        android:background="@drawable/box" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="-85dp"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/home"
            android:layout_gravity="bottom"/>

        <ImageView
            android:id="@+id/cart"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inproductlight"
            android:layout_gravity="bottom"/>

        <ImageView
            android:id="@+id/list"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/userlist"
            android:layout_gravity="bottom"/>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/profile"
            android:layout_gravity="bottom"/>
    </LinearLayout>


</LinearLayout>