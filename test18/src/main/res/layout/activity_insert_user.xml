<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InsertUser">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원정보 등록"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="아이디 : "/>
            <EditText
                android:id="@+id/id"
                android:padding="5dp"
                android:background="@drawable/actions"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="비밀번호 : "/>
            <EditText
                android:id="@+id/password"
                android:padding="5dp"
                android:background="@drawable/actions"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="이름 : "/>
            <EditText
                android:id="@+id/name"
                android:padding="5dp"
                android:background="@drawable/actions"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="전화번호 : "/>
            <EditText
                android:id="@+id/phone"
                android:padding="5dp"
                android:background="@drawable/actions"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="주소 : "/>
            <EditText
                android:id="@+id/address"
                android:padding="5dp"
                android:background="@drawable/actions"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="회원 등급 : "/>
            <TextView
                android:id="@+id/vip"
                android:padding="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="등급 선택하기"
                android:background="@drawable/actions"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/insertUser"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/memberbtn"/>
    <ImageView
        android:id="@+id/bottommenu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="125dp"
        android:layout_gravity="bottom"
        android:background="@drawable/box" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="-85dp"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/home"
            android:layout_gravity="bottom"/>

        <ImageView
            android:id="@+id/cart"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inproductlight"
            android:layout_gravity="bottom"/>

        <ImageView
            android:id="@+id/list"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/userlist"
            android:layout_gravity="bottom"/>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/profile"
            android:layout_gravity="bottom"/>
    </LinearLayout>


</LinearLayout>